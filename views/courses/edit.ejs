<% include ../partials/header.ejs %>
<style>
        body{
            margin-left:15px;
        }
    </style>
<div class="row mb-5 pb-5" style="margin:50px 0">
        <div class="col-md-2">
        </div>
        <div class="col-md-8 form-container pb-3">
                <div class="container-fluid" >
           
      
      <h1 style="text-align:center">Edit Course</h1>
      <hr>  
      <div class="text-center" ><p><sup style="color:red;">*</sup> indicates required fields</p></div>
      <div style="width:50%; margin:25px auto;">
          <form action="/courses/<%=course._id%>?_method=PUT" method="POST">
                <div class="form-group required">
                    <label for="titleInput"  class="control-label">Title</label>
                    <input class="form-control" type="text" id="titleInput" value="<%= course.title%>" name="course[title]">
                </div>
                
                <div class="form-group required">
                    <label for="nameInput"  class="control-label">Name</label>
                    <input class="form-control" type="text" id="nameInput" value="<%= course.name%>" name="course[name]">
                </div>
                
                <div class="form-group">
                    <label for="descriptionInput">Description</label>
                    <textarea class="form-control" id="descriptionInput" type="text" name="course[description]" value="<%= course.description%>"></textarea>
                </div>
                
                <div class="form-group">
                    <label for="professorInput">Professor</label>
                    <input class="form-control" type="text" id="titleInput" value="<%= course.professor%>" name="course[professor]">
                </div>
                
                <button class="btn btn-lg btn-primary btn-block">Update</button>
                
            </form>
            <br>
            <div class="text-right">
                   
            
            <a href="/courses/<%=course._id%>">Go Back</a>
        </div>
    </div>
</div>
</div>
<div class="col-md-2">
</div>
</div>

<% include ../partials/footer.ejs %>