
<% include ../partials/header.ejs %>
<style>
        body{
            margin-left:15px;
        }
    </style>
<div class="row mb-5 pb-5" style="margin:50px 0">
        <div class="col-md-2">
        </div>
        <div class="col-md-8 form-container pb-3">
                <div class="container-fluid" >
           
       <h1 style="text-align:center">Edit Textbook</h1>
       <hr>
       <div class="text-center" ><p><sup style="color:red;">*</sup> indicates required fields</p></div>
       <div style="width:50%; margin:25px auto;">
           <form action="/courses/<%=course_id%>/textbooks/<%=textbook._id%>?_method=PUT" method="POST">
                
                <div class="form-group required">
                    <label for="TitleInput" class="control-label">Title</label>
                    <input class="form-control" type="text" id="TitleInput" value="<%=textbook.title%>" name="textbook[title]">
                </div>
                <div class="form-group">
                    <label for="DescriptionInput">Description</label>
                    <input class="form-control" type="text" id="DescriptionInput" value="<%=textbook.description%>" name="textbook[description]">
                </div>    
                
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                
            </form>
            <br>
            <div class="text-right">
       
            <a href="/courses/<%=course_id%>">Go Back</a>
        </div>
    </div>
</div>
</div>
<div class="col-md-2">
</div>
</div>
<% include ../partials/footer.ejs %>