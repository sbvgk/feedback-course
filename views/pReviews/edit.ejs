
<% include ../partials/header.ejs %>
<style>
        body{
            margin-left:15px;
        }
    </style>
<script>
        $(document).on('ready', function(){
     $('#RatingInput').rating({clearCaption: 'No stars yet. Hover to Rate'});
 });
     </script>

<div class="row mb-5 pb-5" style="margin:50px 0">
        <div class="col-md-2">
        </div>
        <div class="col-md-8 form-container pb-3">
                <div class="container-fluid" >
           <h1 style="text-align:center">Edit Review</h1>
        <hr>
        <div class="text-center" ><p><sup style="color:red;">*</sup> indicates required fields</p></div>
        <div style="width:50%; margin:25px auto;">
            <form action="/professors/<%=professor_id%>/pReviews/<%=pReview._id%>?_method=PUT" method="POST">
                
                <div class="form-group required">
                    <label for="TitleInput"  class="control-label">Title</label>
                    <input class="form-control" type="text" id="TitleInput" value="<%=pReview.title%>" name="pReview[title]">
                </div>
                <div class="form-group required">
                    <label for="DescriptionInput"  class="control-label">Description</label>
                    <input class="form-control" type="text" id="DescriptionInput" value="<%=pReview.description%>" name="pReview[description]">
                </div>
         
                <div class="form-group required">
                        <label for="RatingInput" class="control-label" >Rating</label>
                       <input class="form-control rating rating-loading" value="<%=pReview.rating%>" data-min="0" data-max="5" data-step="1" data-size="sm" type="number" id="RatingInput" name="pReview[rating]" data-rtl="false">
                    </div>
                
                
                <button class="btn btn-lg btn-primary btn-block">submit</button>
                
            </form>
            <br>
            <div class="text-right">
                   
                <a href="/professors/<%=professor_id%>">Go Back</a>
            </div>
        </div>
    </div>
    </div>
    <div class="col-md-2">
    </div>
    </div>
    

<% include ../partials/footer.ejs %>