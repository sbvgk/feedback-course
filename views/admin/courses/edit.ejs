<% include ../../partials/header.ejs %>

<div class="container" style="margin-top:50px">
    
        <h1 style="text-align:center">Edit Course</h1>
        
        <div style="width:30%; margin:25px auto;">
            <form action="/admin/courses/<%=course._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="titleInput">Title</label>
                    <input class="form-control" type="text" id="titleInput" value="<%= course.title%>" name="course[title]">
                </div>
                
                <div class="form-group">
                    <label for="nameInput">Name</label>
                    <input class="form-control" type="text" id="nameInput" value="<%= course.name%>" name="course[name]">
                </div>
                
                <div class="form-group">
                    <label for="descriptionInput">Description</label>
                    <textarea class="form-control" id="descriptionInput" type="text" name="course[description]"><%= course.description%></textarea>
                </div>
                
                <button class="btn btn-lg btn-primary btn-block">update</button>
                
            </form>
            <a href="/courses/<%=course._id%>">Go Back</a>
        </div>
</div>

