<% include ../partials/header.ejs %>

<div class="container" style="margin-top:50px">
    
        <h1 style="text-align:center">Create a new Course</h1>
        
        <div style="width:30%; margin:25px auto;">
            <form action="/courses" method="POST">
                <div class="form-group">
                    <label for="titleInput">Title</label>
                    <input class="form-control" type="text" id="titleInput" placeholder="title" name="title">
                </div>
                
                <div class="form-group">
                    <label for="nameInput">Name</label>
                    <input class="form-control" type="text" id="nameInput" placeholder="name" name="name">
                </div>
                
                <div class="form-group">
                    <label for="descriptionInput">Description</label>
                    <textarea class="form-control" id="descriptionInput" type="text" placeholder="description" name="description"></textarea>
                    
                </div>
                
                <button class="btn btn-lg btn-primary btn-block">submit</button>
                
            </form>
            <a href="/courses">Go Back</a>
        </div>
</div>

