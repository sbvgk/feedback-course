
<% include ../../partials/header.ejs %>

<div class="container" style="margin-top:50px">
    
        <h1 style="text-align:center">Edit Textbook</h1>
        
        <div style="width:30%; margin:25px auto;">
            <form action="/admin/courses/<%=course_id%>/textbooks/<%=textbook._id%>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <label for="TitleInput">Title</label>
                    <input class="form-control" type="text" id="TitleInput" value="<%=textbook.title%>" name="textbook[title]">
                </div>
                <div class="form-group">
                    <label for="DescriptionInput">Description</label>
                    <input class="form-control" type="text" id="DescriptionInput" value="<%=textbook.description%>" name="textbook[description]">
                </div>    
                
                <button class="btn btn-lg btn-primary btn-block">submit</button>
                
            </form>
            <a href="/courses/<%=course_id%>">Go Back</a>
        </div>
</div>

<% include ../../partials/footer.ejs %>