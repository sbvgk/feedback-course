
<% include ../partials/header.ejs %>

<div class="container" style="margin-top:50px">
    
        <h1 style="text-align:center">Create a new Review</h1>
        
        <div style="width:30%; margin:25px auto;">
            <form action="/courses/<%=course._id%>/reviews" method="POST">
                
                <div class="form-group">
                    <label for="TitleInput">Title</label>
                    <input class="form-control" type="text" id="TitleInput" placeholder="title" name="review[title]">
                </div>
                <div class="form-group">
                    <label for="DescriptionInput">Description</label>
                    <input class="form-control" type="text" id="DescriptionInput" placeholder="description" name="review[description]">
                </div>
                <div class="form-group">
                    <label for="RatingInput">Rating</label>
                    <input class="form-control" type="text" id="RatingInput" placeholder="rating" name="review[rating]">
                </div>
                
                
                <button class="btn btn-lg btn-primary btn-block">submit</button>
                
            </form>
            <a href="/courses/<%=course._id%>">Go Back</a>
        </div>
</div>

<% include ../partials/footer.ejs %>