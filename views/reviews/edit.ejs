
<% include ../partials/header.ejs %>
<style>
        body{
            margin-left:15px;
        }
    </style>
<script>
        $(document).on('ready', function(){
     $('#RatingInput').rating({clearCaption: 'No stars yet. Hover to Rate'});
 });
     </script>
<div class="row mb-5 pb-5" style="margin:50px 0">
        <div class="col-md-2">
        </div>
        <div class="col-md-8 form-container pb-3">
                <div class="container-fluid" >
           
       <h1 style="text-align:center">Edit Review</h1>
       <hr>
       <div class="text-center" ><p><sup style="color:red;">*</sup> indicates required fields</p></div>
       <div style="width:50%; margin:25px auto;">
           <form action="/courses/<%=course_id%>/reviews/<%=review._id%>?_method=PUT" method="POST">
                
                <div class="form-group required">
                    <label for="TitleInput" class="control-label">Title</label>
                    <input class="form-control" type="text" id="TitleInput" value="<%=review.title%>" name="review[title]">
                </div>
                <div class="form-group">
                    <label for="DescriptionInput" >Description</label>
                    <input class="form-control" type="text" id="DescriptionInput" value="<%=review.description%>" name="review[description]">
                </div>
    
                <div class="form-group required">
                        <label for="RatingInput" class="control-label" >Rating</label>
                       <input class="form-control rating rating-loading" value="<%=review.rating%>" data-min="0" data-max="5" data-step="1" data-size="sm" type="number" id="RatingInput" name="review[rating]" data-rtl="false">
                    </div>
                
                
                <button class="btn btn-lg btn-primary btn-block">Update</button>
                
            </form>
            <br>
            <div class="text-right">
                   
            <a href="/courses/<%=course_id%>">Go Back</a>
        </div>
    </div>
</div>
</div>
<div class="col-md-2">
</div>
</div>

<% include ../partials/footer.ejs %>